<% @links_per_day.each do |day, links| %>
  <div class="day my-5">
    <div class="row">
      <h2 class="col-12 ml-2"><%= links[0].created_at.strftime("Posted on %d/%m/%Y") %></h2>
    </div>
    <div class="row">
      <% links.each do |link| %>
      <div class="col-4">
        <div class="card-product m-2">
          <img src="https://loremflickr.com/320/240/<%= link.title %>" />
          <div class="card-product-infos">
            <a href="<%= link.url %>">
              <h2><%= link.title %></h2>
            </a>
            <p><%= link.like_count %></p>
            <%= link_to '❤️', link_link_likes_path(link), method: :post, remote: true %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <hr>
<% end %>


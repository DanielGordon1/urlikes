<div class="card-product-infos">
  <a href="<%= link.url %>" target=_blank>
    <h2><%= link.title %></h2>
  </a>
  <% if nerd_signed_in? %>
    <p>
      <% if (current_liked_links & [link]).any? %>
        Likes: <%= link.like_count %> - <%= link_to '💔', link_like_path(link), method: :delete, remote: true, class: 'heart-icon' %>
      <% else %>
         Likes: <%= link.like_count %> - <%= link_to '❤️', link_link_likes_path(link), method: :post, remote: true, class: 'heart-icon' %>
      <% end %>
    </p>
  <% end %>
</div>
